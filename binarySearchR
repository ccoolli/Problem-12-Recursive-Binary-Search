private int binarySearchR (int target, int lo, int hi)
    {
	int index;
	if (lo > hi)
	    index = -1;
	else
	    {
		int mid = (lo + hi)/2;
		if (list[mid] == target)
		    index = mid;
		else if (target < list[mid])
		    index = binarySearchR(target, lo, mid-1);
		else
		    index = binarySearchR(target, mid+1, hi);

	    }
	return index;
    }

